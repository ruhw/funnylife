<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="@string/button_bound_ripple_default"
        />
    <Button
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="@string/button_bound_ripple_red_bg"
        android:background="@drawable/btn_background_ripple_red_bg_material"
        />
    <Button
        android:id="@+id/button_id"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="@string/button_bound_ripple_red"
        android:background="@drawable/btn_background_ripple_red_material"
        />
     <Button
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="@string/button_bound_ripple_oval"
        android:background="@drawable/btn_background_ripple_oval_material"
        />
     <Button
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="@string/button_bound_ripple_oval_stroke"
        android:background="@drawable/btn_background_ripple_oval_stroke_material"
        />
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:background="#F0AAE2"
         >
        <Button
            android:id="@+id/button_borderless_id"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:gravity="center"
            android:text="@string/button_borderless_ripple"
            android:background="@drawable/btn_background_borderless_material"
            />

     </LinearLayout>

